{
    "compilerOptions": {
        "declaration": true,
        "strictNullChecks": true,
        "strict": true,
        "target": "ES2016",
        "module": "ES2020",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es2016", "dom"],
        "rootDir": "."
    },
    "include": ["coding-scheme.interface.ts", "coding-scheme.ts", "index.ts"],
    "exclude": ["test.ts", "dist", "public"]
}
