{
    "name": "@iqbspecs/coding-scheme",
    "author": "IQB - Institut zur QualitÃ¤tsentwicklung im Bildungswesen",
    "license": "MIT",
    "description": "Data interface for coding assessment output",
    "scripts": {
        "test_schema": "jest test ./coding-scheme.schema.json ./test",
        "validate-schema": "test-schema test/test_valid",
        "generate_docs": "asyncapi generate fromTemplate ./make_doc/asyncapi.yaml @asyncapi/html-template --param config=make_doc/asyncapi.config.json -o ./public --force-write --use-new-generator && cat make_doc/add.css >> ./public/css/global.min.css",
        "prepare_publish": "rm -rf dist/* && tsc --module commonjs && cp ./package_npm.json ./dist/package.json && cp ./coding-scheme.schema.json ./dist && cp ./README.md ./dist",
        "npm_publish": "cd dist && npm publish --access public",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iqb-specifications/coding-scheme.git"
    },
    "bugs": {
        "url": "https://github.com/iqb-specifications/coding-scheme/issues"
    },
    "homepage": "https://github.com/iqb-specifications/coding-scheme#readme",
    "eslintConfig": {
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "extends": "@iqb/eslint-config"
            },
            {
                "files": [
                    "*.js"
                ],
                "extends": "@iqb/eslint-config/javascript"
            }
        ]
    },
    "devDependencies": {
        "@asyncapi/cli": "^4.1.1",
        "@asyncapi/html-template": "^3.4.0",
        "@babel/preset-typescript": "^7.24.1",
        "@iqb/eslint-config": "^2.2.0",
        "@jest/globals": "^29.7.0",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.4.4",
        "ajv": "^8.14.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-plugin-import": "^2.25.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.1",
        "@iqbspecs/validate-json": "^0.4.0",
        "typescript": "^5.3.3"
    }
}
